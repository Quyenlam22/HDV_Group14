extends ../../layouts/default.pug

block main
  .container.my-3 
    .row 
      .col-12 
        .box-head 
          h2.inner-title Danh sách sản phẩm
        //- +box-head("Danh sách sản phẩm")

    .row 
      each item in products
        .col-4.mb-3 
            .product-item 
              .inner-image 
                img(
                src=item.image 
                alt=item.title
                zoom-image
                )
              .inner-content 
                h3.inner-title #{item.title}
                .inner-price-new #{item.newPrice}$
                .inner-price-old #{item.oldPrice}$
                .inner-discount -#{item.discountPercent}%
