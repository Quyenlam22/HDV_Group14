extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/search.pug
include ../../mixins/filter-brand.pug

block main
  .container.my-3 
    .row 
      .col-12 
        +box-head("Danh sách sản phẩm")

    .card.mb-3 
      .card-header Bộ lọc và tìm kiếm
        .card-body
            .row 
                .col-6
                   +filter-brand(filterBrand) 
                .col-6
                    +search(keyword)

    .row 
      each item in products
        .col-4.mb-3 
            .product-item 
              .inner-image 
                img(
                src=item.image 
                alt=item.title
                zoom-image
                )
              .inner-content 
                h3.inner-title #{item.title}
                .inner-price-new #{item.newPrice}$
                .inner-price-old #{item.oldPrice}$
                .inner-discount -#{item.discountPercent}%
