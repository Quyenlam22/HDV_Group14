extends ../../layouts/auth.pug

block main
    .container
        h2.text-center Đặt lại mật khẩu
        form(
            action=`/auth/password/reset`
            method="POST"
        )
            .form-group
                label(for="email") Email:
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    value=email 
                    readonly
                )
            .form-group
                label(for="password") Mật khẩu mới:
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                )
            .form-group
                label(for="confirmPassword") Xác nhận mật khẩu:
                input(
                    type="password"
                    class="form-control"
                    id="confirmPassword"
                    name="confirmPassword"
                    required
                )
            .form-group.text-center.mt-3
                button(
                    type="submit"
                    class="btn btn-primary btn-block"
                ) Đổi mật khẩu