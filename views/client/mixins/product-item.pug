mixin product-item(item)
    .col-4.mb-3 
        .product-item 
            .inner-image 
                img(
                    src=item.image 
                    alt=item.title
                    zoom-image
                )
                if(item.featured == "1")
                    .inner-featured Nổi bật
            .inner-content 
                h3.inner-title
                    //- a(href=`/products/detail/${item.slug}`) #{item.title}
                    a(href=`/products/detail/${item.id}`) #{item.title}
                .row
                    .col-8
                        .inner-price-new #{item.priceNew}$
                        .inner-price-old #{item.price}$
                        .inner-discount -#{item.discountPercentage}%
                    .col-4
                        .order-item
                            a(
                                class="btn btn-warning"
                                carts
                                href=`/products/detail/${item.id}`
                            ) <i class="fa-solid fa-cart-shopping"></i>
